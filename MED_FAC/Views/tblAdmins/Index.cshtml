@model IEnumerable<MED_FAC.Models.tblAdmin>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   <a href="@Url.Action("Create","tblAdmins")" class="btn btn-theme02 glyphicon glyphicon-pencil">Create New</a>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
              Admin Name
        </th>
        <th>
            Admin Email
        </th>
        <th>
            Admin Password
        </th>
        <th>
           Admin Contact
        </th>
        <th></th>
    </tr>

@foreach (var admin in Model) {
    <tr>
        <td>
            @admin.ADMIN_NAME
        </td>
        <td>
            @admin.ADMIN_EMAIL
        </td>
        <td>
            @admin.ADMIN_PASSWORD
        </td>
        <td>
            @admin.ADMIN_CONTACT
        </td>
        <td>
            <a href="@Url.Action("Edit","tblAdmins",new { id=admin.ADMIN_ID })" class="btn btn-primary glyphicon glyphicon-edit"></a>
            <a href="@Url.Action("Details","tblAdmins",new { id=admin.ADMIN_ID })" class="btn btn-success glyphicon glyphicon-book"></a>
            <a href="@Url.Action("Delete","tblAdmins",new { id=admin.ADMIN_ID })" class="btn btn-danger glyphicon glyphicon-trash"></a>


            @*@Html.ActionLink("Edit", "Edit", new { id=admin.ADMIN_ID }) |
            @Html.ActionLink("Details", "Details", new { id=admin.ADMIN_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=admin.ADMIN_ID })*@
        </td>
    </tr>
}

</table>
